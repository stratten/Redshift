{
    "name": "redshift",
    "version": "1.0.0",
    "description": "Desktop app for managing Doppler music library sync between Mac and iPhone",
    "main": "src/main/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "node build-html.js && electron . --dev",
        "build": "node build-html.js && electron-builder",
        "pack": "node build-html.js && electron-builder --dir",
        "build:renderer": "node build-html.js"
    },
    "dependencies": {
        "chokidar": "^3.5.3",
        "electron": "^27.0.0",
        "fs-extra": "^11.1.1",
        "fuzzysort": "^2.0.4",
        "jimp": "^0.22.12",
        "mime-types": "^3.0.1",
        "music-metadata": "^7.14.0",
        "node-id3": "^0.2.6",
        "qrcode": "^1.5.4",
        "sqlite3": "^5.1.6",
        "usb": "^2.11.0",
        "uuid": "^13.0.0",
        "ws": "^8.18.3"
    },
    "optionalDependencies": {
        "applescript": "^1.0.0"
    },
    "devDependencies": {
        "electron-builder": "^24.6.4"
    },
    "build": {
        "appId": "com.redshift.app",
        "productName": "Redshift",
        "directories": {
            "buildResources": "build"
        },
        "files": [
            "src/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.music",
            "icon": "build/icon.icns"
        }
    }
}
