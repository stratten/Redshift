{
    "name": "redshift",
    "version": "1.0.0",
    "description": "Desktop app for managing Doppler music library sync between Mac and iPhone",
    "author": "Redshift",
    "main": "src/main/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "node build-html.js && electron . --dev",
        "build": "node build-html.js && ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true electron-builder",
        "pack": "node build-html.js && ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true electron-builder --dir",
        "build:renderer": "node build-html.js"
    },
    "dependencies": {
        "chokidar": "^3.5.3",
        "form-data": "^4.0.1",
        "fs-extra": "^11.1.1",
        "fuzzysort": "^2.0.4",
        "jimp": "^0.22.12",
        "mime-types": "^3.0.1",
        "music-metadata": "^7.14.0",
        "node-id3": "^0.2.6",
        "qrcode": "^1.5.4",
        "sqlite3": "^5.1.6",
        "usb": "^2.11.0",
        "uuid": "^13.0.0",
        "ws": "^8.18.3"
    },
    "optionalDependencies": {
        "applescript": "^1.0.0"
    },
    "devDependencies": {
        "@electron/rebuild": "^4.0.1",
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4"
    },
    "build": {
        "appId": "com.redshift.app",
        "productName": "Redshift",
        "directories": {
            "buildResources": "build"
        },
        "files": [
            "src/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "resources/python",
                "to": "python",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "resources/python-deps",
                "to": "python-deps",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "scripts",
                "to": "scripts",
                "filter": [
                    "**/*.py"
                ]
            }
        ],
        "asarUnpack": [
            "node_modules/sqlite3/**/*",
            "node_modules/usb/**/*"
        ],
        "npmRebuild": false,
        "buildDependenciesFromSource": false,
        "mac": {
            "category": "public.app-category.music",
            "icon": "build/icon.icns",
            "target": [
                {
                    "target": "dir",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ],
            "identity": null
        }
    }
}
